{
  "$schema": "https://json.schemastore.org/package",
  "name": "soa-c",
  "version": "0.0.1",
  "description": "A CLI that generates Struct-of-Arrays (SOA) C code from a JSON descriptor file.",
  "main": "dist/index.js",
  "bin": {
    "soa-c": "./dist/index.js"
  },
  "scripts": {
    "test": "./bin/soa-c examples/scene_node.json",
    "clean": "tsc --build --clean",
    "prebuild": "quicktype -o src/descriptor.ts --src-lang schema docs/schema/descriptor.json",
    "build": "tsc",
    "lint": "eslint --fix src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "prepare": "husky install"
  },
  "keywords": [
    "cli",
    "struct of arrays",
    "soa",
    "code generator",
    "C",
    "C++"
  ],
  "author": "Mean-UI-Thread",
  "license": "MIT",
  "repository": "https://github.com/mean-ui-thread/soa-c",
  "homepage": "https://github.com/mean-ui-thread/soa-c#readme",
  "devDependencies": {
    "@tsconfig/node-lts": "^18.12.5",
    "@types/figlet": "^1.5.6",
    "@types/lodash": "^4.14.197",
    "@types/node": "^20.5.8",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.48.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "quicktype": "^23.0.75",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "chalk": "~4.1.2",
    "commander": "^11.0.0",
    "figlet": "^1.6.0",
    "lodash": "^4.17.21",
    "word-wrap": "^1.2.5"
  }
}
